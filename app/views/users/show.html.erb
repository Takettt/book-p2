<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image,size:"100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

        <h2>New book</h2>
        <%= form_with model: Book, method: :post do |f| %>
          <h3>Title</h3>
            <%= f.text_field :title, class: "form-control" %>
          <h3>Oprion</h3>
            <%= f.text_area :option, class: "form-control" %><br>
            <%= f.submit "Create Book" %>
        <% end %>
    </div>

    <div class="col-9">
      <h1 class="m-5">Book detail</h1>

        <table class="table mx-5">
          <tr>
            <thead>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th></th>
              <th></th>
            </thead>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image,size:"100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path %>
            </td>
            <td>
              <%= book.option %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", user_path(book.id), method: :delete %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>