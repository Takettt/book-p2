<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'books/form', user: @user, book: @book %>
    </div>
    <div class="col-8">
      <h1>User</h1>
      <table class="table">
        <thead>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </thead>
        <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image,size:"100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user) %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div> 
</div>