<div class="container">
  <%= render 'errors', book: @book %>
  <div class="row">
    <div class="col-3">
      <%= render 'form', user: @user, book: @book %>
    </div>
    <div class="col-9">
      <h1>Book</h1>
        <table class="table">
          <tr>
            <%= render 'thead' %>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <% if book.user.profile_image.attached? %>
                <%= image_tag book.user.profile_image,size:"100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
            <td><%= book.title %></td>
            <td><%= link_to book.option, book_path(book.id) %></td>
          </tr>
          <% end %>
        </table>

    </div>
  </div>
</div>