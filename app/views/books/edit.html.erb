<h1>Editing Book</h1>
<table class="table">
  <tr>
    <%= form_with model: @book do |f| %>
      <h3>Title</h3>
        <%= f.text_field :title %>
      <h3>Option</h3>
        <%= f.text_area :option %>
        <%= f.submit "Update Book" %>
    <% end %>
  </tr>
</table>
<div>
  <%= link_to "show", book_path(@book) %>|
  <%= link_to "Back", :back %>
</div>